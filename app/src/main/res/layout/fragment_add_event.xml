<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kurthen.myband.AddEventFragment"
    android:background="@color/light_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name"
                android:ems="10"
                android:id="@+id/add_event_fragment_title_edit"
                android:layout_margin="8dp"
                android:background="@android:color/white"
                android:padding="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:hint="Beschreibung"
                android:ems="10"
                android:id="@+id/add_event_fragment_description_edit"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@android:color/white"
                android:padding="8dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:layout_margin="8dp"
                    android:background="@android:color/white">

                    <TextView
                        android:text="Beginn"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_event_fragment_start_text"
                        android:layout_row="0"
                        android:layout_column="0" />

                    <TextView
                        android:text="Dauer"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:id="@+id/add_event_fragment_duration_text"
                        android:ems="10"
                        android:layout_row="2"
                        android:layout_column="0" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="1:00"
                        android:ems="10"
                        android:id="@+id/add_event_fragment_duration_edit"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:inputType="time" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:hint="Datum"
                        android:focusable="false"
                        android:ems="10"
                        android:id="@+id/add_event_fragment_date_edit"
                        android:layout_row="0"
                        android:layout_column="1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="time"
                        android:hint="Uhrzeit"
                        android:focusable="false"
                        android:ems="10"
                        android:id="@+id/add_event_fragment_time_edit"
                        android:layout_row="1"
                        android:layout_column="1" />

                </GridLayout>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
