<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.kurthen.myband.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:minHeight="116dp"
            app:title="My Band">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_home"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_circle_white_48dp"
        android:id="@+id/home_add_button"
        android:layout_weight="1"
        android:tint="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:layout_marginTop="70dp"
        android:layout_marginRight="15dp"
        style="@android:style/Widget.Holo.ImageButton"
        android:onClick="onAddUpdateClicked"
        android:adjustViewBounds="false"
        android:elevation="10dp"
        app:layout_anchorGravity="center_vertical|center_horizontal"
        android:layout_gravity="top|right" />
    <!--
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_add_circle_black_36dp"
            android:id="@+id/floatingActionButton"
            app:layout_anchorGravity="top|right"
            android:layout_gravity="top|right"
            app:backgroundTint="@android:color/transparent"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp" /> -->

</android.support.design.widget.CoordinatorLayout>
